<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Markfi.Views.Tutorial_Page">
    <ContentPage.Content>
        <!--setting defaults for page-->
        <StackLayout Padding="20, 20, 20, 20" VerticalOptions="CenterAndExpand" HorizontalOptions="Fill">
            <!--Welcome to the tutorial message-->
            <Label Text="Welcome to the tutorial!"
                FontSize="Title"
                HeightRequest="64"/>
            <Label Text="This app allows you to quiz yourself on a given topic. To access your quizzes, tap the menu option in the top left-hand corner of the screen and go to My Quizzes. This will allow you to view all the quiz packs that you have on your devices, as well as allow you to make new quizzes."/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>